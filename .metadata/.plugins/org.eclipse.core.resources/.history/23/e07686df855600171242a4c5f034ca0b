window.onload = addHandlers();	
function addHandlers(){
	var email = $("#email_address");
	email.addEventListener("blur", checkWord);
	email.addEventListener("focus", clearErrors);
	
	var password = $("#password");
	password.addEventListener("blur", checkWord);
	password.addEventListener("focus", clearErrors);
}
function checkPass()
{
	
	var pass = document.getElementsByName("user_password");
	var cpass = document.getElementsByName("user_confirm_password");
	checkEmptyAndSpaces.call(this);
	if(pass[0].value !== cpass[0].value)
		generateErrors("Passwords do not match",pass[0]);		
	var value = this;
	$.getJSON('components/fieldValidationService.cfc?method=validatePass&fieldvalue=' + pass[0].value + '&fieldValueT=' + cpass[0].value , function(result)
	{
		if (Object.values(result)[0] !== getErrorMessages(value) && Object.values(result)[0] !== "") 
			generateErrors(Object.values(result)[0].toString(), value);
		if (Object.keys(result)[0] !== value)
			value.value = Object.keys(result)[0];
	});	
	
	
	return;
	
}
