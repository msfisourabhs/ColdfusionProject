<cfquery datasource="Project_DataSource" name="nmUserIsActive">
	SELECT isActive
	FROM dbo.Users_Details
	WHERE uid = #url.uid#
</cfquery>
<cfif StructKeyExists(url,"uid") AND nmUserIsActive.isActive EQ 1>
<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="stylesheet/home.css">
</head>
<body>

<ul>
  <li><a class="active" href="home.cfm?uid=<cfoutput>#url.uid#</cfoutput>">Home</a></li>
  <li><a href="#Profile">Profile</a></li>
  <li><a href="#contact">Contact</a></li>
  <li style="float:right"><a href="login.cfm" >Logout</a></li>
</ul>

	
</cffunction>>
<!---Welcome Message--->
	<cfquery datasource="Project_DataSource" name="nmName">
		SELECT FirstName,LastName
		FROM dbo.Users_Details
		WHERE uid = '#url.uid#'
	</cfquery>
	<cfoutput query="nmName">
		<h1>Welcome #nmName.FirstName# #nmName.LastName#</h1>
	</cfoutput>
</body>
</html>
</cfif>