<!---Intialize values--->
<cfparam name="form.user_interest" default="NONE" />
<cfparam name="form.subs_value" default="NO" />	  
<cfset errorMessages = {}>
<cfloop collection="#form#" item="fields">
	<cfset #StructInsert(errorMessages,fields,"")#>
</cfloop>
<!----Test Input fields---
<cfset "#StructUpdate(form,"firstname","              ")#">
